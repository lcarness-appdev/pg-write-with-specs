<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @pic.image %>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <%= @pic.caption %>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @pic.owner.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%= time_ago_in_words(@pic.created_at) %> ago
  </dd>

  <dt>Fans</dt>
  <dd>
    <%= @pic.fans.pluck(:username).to_sentence %>
  </dd>
  
  <dt>Add a new fan</dt>
  <dd>
    <form action="/add_new_fan">
      <input type="hidden" name="photo_id" value="<%= @pic.id %>">
      
      <label for="fan_dropdown">
        Person
      </label>
      
      <select id="fan_dropdown" name="liker_id">
        <% User.all.each do |a_user| %>
          <option value="<%= a_user.id %>">
            <%= a_user.username %>
          </option>
        <% end %>
      </select>
      
      <button>Add fan</button>
    </form>
  </dd>
  
  <dt>Danger zone</dt>
  <dd>
    <a href="/existing_photo_form/<%= @pic.id %>">
      Edit this photo
    </a>
  </dd>
  <dd>
    <a href="/delete_photo/<%= @pic.id %>">
      Delete this photo
    </a>
  </dd>
</dl>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @pic.comments.order({ :created_at => :asc }).each do |comment| %>
  <tr>
    <td>
      <%= comment.author.username %>
    </td>

    <td>
      <%= comment.body %>
    </td>

    <td>
      <%= time_ago_in_words(comment.created_at) %> ago
    </td>
  </tr>
  <% end %>
</table>


<h3>Add a new comment</h3>
  <form action="/add_new_comment">
    <input type="hidden" name="photo_id" value="<%= @pic.id %>">
      
    <label for="commenter_dropdown">
        Commenter
    </label>
    <select id="commenter_dropdown" name="commenter_id">
      <% User.all.each do |a_user| %>
        <option value="<%= a_user.id %>">
          <%= a_user.username %>
        </option>
      <% end %>
    </select>
    
    <label for="comment_box">
      Comment
    </label>
    <textarea
      id="comment_box"
      name="pic_comment"
      placeholder="Enter a comment..."></textarea>
    
    <button>Add comment</button>
  </form>